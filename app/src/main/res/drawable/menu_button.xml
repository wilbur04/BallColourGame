<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners
                android:radius="2dp"
                />
            <padding
                android:left="15dp"
                android:bottom="15dp"
                android:right="15dp"
                android:top="15dp"
                />
            <solid android:color="#2196F3" />
            <stroke
                android:color="#1E88E5"
                android:width="5dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners
                android:radius="2dp"
                />
            <padding
                android:left="15dp"
                android:bottom="15dp"
                android:right="15dp"
                android:top="15dp"
                />
            <solid android:color="#1E88E5" />
            <stroke
                android:color="#1E88E5"
                android:width="5dp"/>
        </shape>
    </item>
</selector>